<% content_for(:description) do %>
  Vente de bijoux artisanaux en céramique. Ma production se compose de bijoux et de poteries utilitaires.
<% end %>
<% content_for(:title_tag) do %>
  Acheter en ligne les bijoux en céramique de Fabienne Jacob.
<% end %>

<%= render 'shared/darktheme_home_pics' %>

<div class="jumbotron-darktheme">

<!-- LAPTOP -->
  <div class="hidden-xs">
    <div class="banner-darktheme">

      <div class="home-top-bloc">
        <div class="left-photo">
          <%= photo_update('darktheme1photo', 100, '', '', 30, '.darktheme1photo', "Mise à jour photo d'accueil 1")%>
           <style>
            .left-photo {
              background-image: url(<%= cl_image_path @darktheme1photopath, quality: "auto" %>);
              background-size: cover;
              background-position-y: center;
              background-position-x: center;
            }
          </style>
        </div>
        <div class="right-text">
          <% if user_signed_in? && current_user.admin %>
              <% article_typing("accueil-top-left", "horizontal", "markdown1", "live-text1", "input1") %>
              <% @markdown = @markdown1 %>
              <div class="live-text">
                <%= render 'shared/articletyping' %>
              </div>
          <% else %>
            <div class="plain-text">
              <% article_display("accueil-top-left", "horizontal") %>
              <%= @markdown.html_safe %>
            </div>
          <% end %>
        </div>
      </div>

      <div class="home-bottom-bloc">
        <div class="first-couple">
          <div class="left-text">
            <% if user_signed_in? && current_user.admin %>
              <% article_typing("accueil-bottom-right", "vertical", "markdown2", "live-text2", "input2") %>
              <% @markdown = @markdown2 %>
              <div class="live-text">
                <%= render 'shared/articletyping' %>
              </div>
            <% else %>
              <div class="plain-text">
                <% article_display("accueil-bottom-right", "vertical") %>
                <%= @markdown.html_safe %>
              </div>
            <% end %>
          </div>
          <div class="right-photo">
            <div class="photo-background">
              <%= photo_update('darktheme2photo', 100, '', '', 30, '.darktheme2photo', "Mise à jour photo d'accueil 2")%>
              <style>
                .photo-background {
                  background-image: url(<%= @darktheme2photopath %>);
                  background-size: cover;
                  background-position-y: center;
                  background-position-x: center;
                }
              </style>
            </div>
          </div>
        </div>

        <div class="second-couple">
          <div class="left-photo-home">
            <div class="photo-background-2">
              <%= photo_update('darktheme3photo', '', '', '', 30, '.darktheme3photo', "Mise à jour photo d'accueil 3")%>
              <style>
                .photo-background-2 {
                  background-image: url(<%= @darktheme3photopath %>);
                  background-size: cover;
                  background-position-y: center;
                  background-position-x: center;
                }
              </style>
            </div>
            <div class="bottom-bloc">
              <div class="home-links">
                <%= link_to "VOIR LES BOUCLES D'OREILLES", ceramiques_path(categories: ["boucle d'oreille"]), title: "boucles d'oreilles" %>
                <%= link_to "VOIR LES BAGUES", ceramiques_path(categories: ["collier"]), title: "bagues" %>
                <%= link_to "VOIR LES COLLIERS", ceramiques_path(categories: ["bague"]), title: "collier" %>
              </div>
              <div class="photo-background-3">
                <%= photo_update('darktheme4photo', '', 1, 100, '', '.darktheme4photo', "Mise à jour photo d'accueil 4")%>
                <style>
                  .photo-background-3 {
                    background-image: url(<%= @darktheme4photopath %>);
                    background-size: cover;
                    background-position-y: center;
                    background-position-x: center;
                  }
                </style>
              </div>
            </div>
          </div>
          <div class="right-text">
            <% if user_signed_in? && current_user.admin %>
              <% article_typing("accueil-final", "vertical", "markdown3", "live-text3", "input3") %>
              <% @markdown = @markdown3 %>
              <div class="live-text">
                <%= render 'shared/articletyping' %>
              </div>
            <% else %>
              <div class="plain-text">
                <% article_display("accueil-final", "vertical") %>
                <%= @markdown.html_safe %>
              </div>
            <% end %>
          </div>
        </div>
      </div>

    </div>
  </div>

<!-- MOBILE -->
  <div class="hidden-sm hidden-md hidden-lg">
    <div class="banner-xs-darktheme">
      <%= cl_image_tag @darktheme1photopath, alt: "Bijoux n° 1 de la page d'accueil", class: "mobile-image-1" %>
       <div class="plain-text">
        <% article_display("accueil-top-left", "horizontal") %>
        <%= @markdown.html_safe %>
      </div>
      <div class="photo3"><%= cl_image_tag @darktheme2photopath, alt: "Bijoux n° 2 de la page d'accueil", class: "mobile-image-2"%></div>
      <div class="photo4"><%= cl_image_tag @darktheme3photopath, alt: "Bijoux n° 3 de la page d'accueil", class: "mobile-image-3"%></div>
       <div class="plain-text">
        <% article_display("accueil-bottom-right", "horizontal") %>
        <%= @markdown.html_safe %>
      </div>
      <%= cl_image_tag @darktheme4photopath, alt: "Bijoux n° 4 de la page d'accueil", class: "mobile-image-4"%>
      <div class="plain-text">
        <% article_display("accueil-final", "vertical") %>
        <%= @markdown.html_safe %>
      </div>
    </div>
  </div>

<% content_for(:after_js) do %>
  <script type="application/ld+json">
  {
    "@context": "http://schema.org",
    "@type": "ArtGallery",
    "name": "Les bijoux en céramique de Fabienne Jacob",
    "description": "Online craft store",
    "openingHours": "Mo-Fr 09:00-18:00",
    "telephone": "<%= ENV['TELEPHONE']%>",
    "url": "<%=request.original_url%>",
    "image": "<%=request.original_url%><%= image_path ENV['HOMEPIC']%>",
    "address":"<%= ENV['ADDRESS'].gsub(/[+]/, ' ')%>",
    "priceRange":"20€ à 800€"
  }
  </script>
<% end %>
