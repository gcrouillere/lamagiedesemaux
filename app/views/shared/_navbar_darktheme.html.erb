<!-- Right Navigation LAPTOP -->
<div class="navbar-laptop-darktheme hidden-xs">
  <!-- Logo -->
  <%= link_to root_path, class: "navbar-brand", title: "Retour à l'accueil de notre offre de boutique ligne" do %>
    <%= "#{ENV['FIRSTNAME']} #{ENV['LASTNAME'].capitalize}" %>
  <% end %>

  <!-- Different navigation if login or not -->
  <% if user_signed_in? %>

    <!-- Navbar right when connected -->
    <div class="navbar-item-darktheme">
      <div class="nav-bar-list">
        <% if current_user.admin %>
          <%= link_to admin_root_path do %>
            <span>Administration</span>
          <% end %>
        <% end %>
        <%= link_to root_path, title: "Retour à l'accueil de notre offre de boutique ligne", class: "hidden-sm" do %>
          <span>Accueil</span>
        <% end %>
        <%= link_to ceramiques_path, title: "Découvrez les bijoux en vente dans la boutique" do %>
          <span>Boutique</span>
        <% end %>
        <%= link_to contact_path, title: "Retrouvez les coordonnées et informations sur Fabienne Jacob" do %>
          <span>Infos</span>
        <% end %>
        <a href="#" id="darktheme-filter-search" title="Filtrez la liste des bijoux en vente dans la boutique"><i class="fa fa-search"></i>Filtrer</a>
        <% if session[:order].present? %>
          <% if Order.where(id: session[:order]).present? %>
            <% if Order.where(id: session[:order]).first.state != "lost" %>
              <%= link_to order_path(Order.find(session[:order])) do %>
                <span><i class="fa fa-shopping-cart"></i></span>
              <% end %>
            <% end %>
          <% end %>
        <% end %>
      </div>
    </div>

  <% else %>
    <div class="navbar-item-darktheme">
      <div class="nav-bar-list">
        <%= link_to root_path, title: "Retour à l'accueil de notre offre de boutique ligne", class: "hidden-sm" do %>
          <span>Accueil</span>
        <% end %>
        <%= link_to ceramiques_path, title: "Découvrez les bijoux en vente dans la boutique" do %>
          <span>Boutique</span>
        <% end %>
        <%= link_to contact_path, title: "Retrouvez les coordonnées et informations sur Fabienne Jacob" do %>
          <span>Infos</span>
        <% end %>
        <a href="#" id="darktheme-filter-search" title="Filtrez la liste des bijoux en vente dans la boutique"><i class="fa fa-search"></i>Filtrer</a>
        <% if session[:order].present? %>
          <% if Order.where(id: session[:order]).present? %>
            <% if Order.where(id: session[:order]).first.state != "lost" %>
              <%= link_to order_path(Order.find(session[:order])) do %>
                <span><i class="fa fa-shopping-cart"></i></span>
              <% end %>
            <% end %>
          <% end %>
        <% end %>
      </div>
    </div>
  <% end %>
  </div>

